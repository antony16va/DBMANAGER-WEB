{
  "config_generacion": {
    "descripcion": "Configuración para generación inteligente de data de prueba con inferencia semántica",

    "cantidad_base": 100,

    "cantidad_por_tabla": {
      "_comentario": "Cantidad específica por tabla. Si no se especifica, usa cantidad_base",
      "_ejemplo_usuarios": 500,
      "_ejemplo_productos": 1000
    },

    "multiplicadores_fk": {
      "_comentario": "Multiplica cantidad base según número de FKs (simular 1:N)",
      "habilitado": true,
      "factor": 1.0
    },

    "generacion_nulls": {
      "_comentario": "Configuración para generar valores NULL",
      "habilitado": true,
      "probabilidad": 0.2,
      "excluir_pks": true,
      "excluir_fks": false
    },

    "limpieza_previa": {
      "_comentario": "Limpiar tablas antes de insertar",
      "preguntar": false,
      "automatico": false
    },

    "rangos_personalizados": {
      "_comentario": "Rangos personalizados para tipos numéricos",
      "integer": {
        "min": 1,
        "max": 2147483647
      },
      "bigint": {
        "min": 1,
        "max": 9223372036854775807
      },
      "smallint": {
        "min": 1,
        "max": 32767
      },
      "numeric": {
        "max_valor": 999999
      }
    },

    "rangos_fechas": {
      "_comentario": "Rangos para generación de fechas",
      "date": {
        "dias_atras": 1825,
        "dias_adelante": 0
      },
      "timestamp": {
        "dias_atras": 730,
        "dias_adelante": 0
      }
    },

    "texto": {
      "_comentario": "Configuración para generación de texto",
      "max_length_text": 500,
      "palabras_personalizadas": []
    },

    "faker": {
      "_comentario": "Configuración para biblioteca Faker (datos realistas)",
      "habilitado": true,
      "locale": "es_ES",
      "_locales_disponibles": ["es_ES", "es_MX", "en_US", "pt_BR"]
    },

    "inferencia_semantica": {
      "_comentario": "Sistema de inferencia de contexto de negocio",
      "habilitado": true,
      "patrones_personalizados": {
        "_comentario": "Define patrones adicionales para tu dominio específico",
        "_ejemplo": {
          "regex": ".*_custom.*",
          "generador": "generar_custom",
          "priority": 10
        }
      }
    },

    "optimizacion": {
      "_comentario": "Configuraciones de performance",
      "usar_copy": true,
      "_comentario_copy": "COPY es mucho más rápido que INSERT para grandes volúmenes",
      "batch_size": 1000,
      "_comentario_batch": "Tamaño de lote para INSERT (si COPY falla)"
    },

    "validacion": {
      "_comentario": "Validaciones adicionales durante la generación",
      "validar_constraints": true,
      "validar_unicidad": true,
      "max_intentos_unicidad": 1000
    },

    "seeds": {
      "_comentario": "Semilla para reproducibilidad (null = aleatorio)",
      "random_seed": null,
      "_ejemplo_seed": 42
    },

    "logging": {
      "_comentario": "Configuración de logs",
      "nivel": "INFO",
      "mostrar_queries": false,
      "mostrar_valores_generados": false,
      "mostrar_estadisticas": true
    },

    "generadores_especificos": {
      "_comentario": "Configuración específica para generadores semánticos",

      "dni": {
        "formato": "peruano",
        "digitos": 8
      },

      "ruc": {
        "formato": "peruano",
        "tipo_defecto": "empresa",
        "_tipos": ["persona_natural", "empresa"]
      },

      "telefono": {
        "pais": "peru",
        "incluir_fijos": true,
        "incluir_celulares": true
      },

      "email": {
        "dominios_personalizados": [
          "empresa.com",
          "test.com",
          "ejemplo.pe"
        ]
      },

      "direccion": {
        "pais": "peru",
        "incluir_referencia": false
      },

      "montos": {
        "moneda": "PEN",
        "rangos_realistas": true,
        "incluir_decimales": true
      },

      "estados": {
        "valores_personalizados": [
          "ACTIVO",
          "INACTIVO",
          "PENDIENTE",
          "APROBADO",
          "RECHAZADO"
        ]
      }
    },

    "reglas_negocio": {
      "_comentario": "Reglas de negocio específicas del dominio",
      "_ejemplo_validacion_edad": {
        "tabla": "personas",
        "columna": "edad",
        "min": 18,
        "max": 100
      }
    }
  },

  "documentacion": {
    "version": "2.0",
    "caracteristicas": [
      "Ingeniería inversa completa del esquema de BD",
      "Inferencia automática de contexto de negocio",
      "40+ generadores semánticos especializados",
